@using HomeNow.Resources

@{
    ViewBag.Title = "Home - NhàNow";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var currentLang = System.Threading.Thread.CurrentThread.CurrentUICulture.Name;
    var totalListings = 182;
}

<style>
    /* -------- KHUNG 0: nền full width -------- */
    .home-hero {
        position: relative;
        width: 100%;
        min-height: 75vh;
        background: url('/Assets/Banner.jpg') center center no-repeat;
        background-size: cover;
        color: #fff;
    }

    .home-hero::before {
        content: "";
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.45);
    }

    /* -------- KHUNG 1: khung nội dung giữa ảnh -------- */
    .home-hero-shell {
        position: relative;
        z-index: 1;
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 3% 4% 6%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        box-sizing: border-box;
    }

    /* -------- KHUNG 2: HEADER (thanh trên) -------- */
    .home-hero-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 4%;
    }

    /* KHỐI TRÁI: logo + city + tagline */
    .home-header-left-box {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .home-logo-icon {
        width: 2rem;
        height: 1.6rem;
        border: 0.15rem solid #fff;
        border-radius: 0.4rem;
        position: relative;
        box-sizing: border-box;
    }

    .home-logo-icon::after {
        content: "";
        position: absolute;
        left: 20%;
        bottom: 20%;
        width: 55%;
        height: 45%;
        border-top: 0.15rem solid #fff;
        border-left: 0.15rem solid #fff;
        transform: skewX(-15deg);
        box-sizing: border-box;
    }

    .home-header-left {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .home-header-left-top {
        display: flex;
        align-items: baseline;
        gap: 0.5rem;
        font-size: clamp(1.2rem, 2vw, 1.6rem);
        font-weight: 700;
    }

    .home-location {
        font-size: 0.9rem;
        opacity: .9;
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }

    .home-header-left-tagline {
        font-size: 0.8rem;
        opacity: .8;
        margin-top: 0.15rem;
    }

    /* KHỐI PHẢI: Thuê/Bán/Đăng tin + login + ngôn ngữ */
    .home-header-right-box {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        text-align: right;
    }

    .home-header-right-top {
        font-size: clamp(0.9rem, 1.4vw, 1rem);
        margin-bottom: 0.3rem;
    }

    .home-header-right-top a {
        color: #fff;
        text-decoration: none;
        margin: 0 0.3rem;
    }

    .home-header-right-top a:hover {
        text-decoration: underline;
    }

    .home-header-right-top .nav-post {
        margin-left: 1rem;
        padding: 0.3rem 1.1rem;
        border-radius: 999px;
        background: #00b56b;
        font-weight: 600;
        display: inline-block;
    }

    .home-header-right-top .nav-post:hover {
        background: #00a15f;
        text-decoration: none;
    }

    .home-header-right-bottom {
        font-size: 0.75rem;
        opacity: .9;
        display: flex;
        align-items: center;
        gap: 0.3rem;
    }

    .home-header-right-bottom a {
        color: #fff;
        text-decoration: none;
        margin: 0 0.2rem;
    }

    .home-header-right-bottom a:hover {
        text-decoration: underline;
    }

    .lang-active {
        font-weight: 700;
        text-decoration: underline;
    }

    /* -------- KHUNG 3: MAIN (title + tab + search) -------- */
    .home-hero-main {
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
    }

    .home-main-text {
        margin-bottom: 2%;
    }

    .home-main-title {
        font-size: clamp(1.8rem, 4.5vw, 2.2rem);
        font-weight: 700;
        margin-bottom: 1%;
        text-align: center;
    }

    .home-sub-title {
        font-size: clamp(1rem, 2vw, 1.25rem);
        text-align: center;
    }

    .home-main-tabs {
        margin-top: 3%;
        margin-bottom: 1.5%;
    }

    .home-tabs {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
        gap: 6%;
        font-size: clamp(0.9rem, 1.6vw, 1rem);
    }

    .home-tabs li {
        cursor: pointer;
        opacity: .8;
        white-space: nowrap;
    }

    .home-tabs li.active {
        font-weight: 700;
        opacity: 1;
    }

    .home-main-search {
        margin-top: 7%;
    }

    .home-search-box {
        background: #fff;
        border-radius: 0.25rem;
        display: flex;
        align-items: stretch;
        overflow: hidden;
        width: 85%;
        box-shadow: 0 1.2rem 2rem rgba(0, 0, 0, 0.25);
        box-sizing: border-box;
        height: 46px;
        margin: auto;
    }

    .home-search-box input[type="text"] {
        border: none;
        padding: 1.2rem 1.4rem;
        flex: 1;
        font-size: 1rem;
        outline: none;
        min-width: 0;
    }

    .home-search-location {
        display: flex;
        align-items: center;
        padding: 0 1.4rem;
        border-left: 1px solid #eee;
        font-size: 0.9rem;
        color: #666;
        background: #fafafa;
        white-space: nowrap;
    }

    .home-search-btn {
        background: #00b56b;
        border: none;
        color: #fff;
        padding: 0 2.2rem;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        white-space: nowrap;
    }

    .home-search-btn:hover {
        background: #00a15f;
    }

    /* -------- KHUNG 4: FOOTER nhỏ dưới cùng -------- */
    .home-hero-footer {
        font-size: 0.75rem;
        opacity: .8;
        margin-top: 3%;
    }

    /* ========== MOBILE / TABLET ========== */
    @@media (max-width: 768px) {
        /* khung tổng: cho cao hơn chút và bớt padding */
        .home-hero {
            
        }

        .home-hero-shell {
            width: 100%;
            max-width: 100%;
            padding: 20px 10px 30px;
        }

        /* logo + tên + city nhỏ lại */
        .home-header-left-top {
            font-size: 18px;
        }

        .home-location {
            font-size: 0.9rem;
            opacity: .9;
            /* display: inline-flex; */
            /* align-items: center; */
            /* gap: 0.25rem; */
        }

        .home-header-left-tagline {
            font-size: 11px;
        }

        /* menu bên phải nhỏ lại */
        .home-header-right-top {
            font-size: 13px;
        }

            .home-header-right-top .nav-post {
                padding: 4px 12px;
            }

        .home-header-right-bottom {
            font-size: 10px;
        }

        /* tiêu đề chính + phụ nhỏ lại */
        .home-main-title {
            font-size: 25px;
            line-height: 1.25;
            width: 75%;
            margin: auto;
            margin-top: 7%;
            text-align: center;
        }

        .home-sub-title {
            font-size: 13px;
            padding: 1%;
            text-align: center;
        }

        /* tab: cho nhỏ chữ + được xuống dòng để không tràn ngang */
        .home-tabs {
            font-size: 13px;
            gap: 12px;
            flex-wrap: wrap;
        }

        /* ô search: thu nhỏ chữ & padding */
        .home-search-box {
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.25);
        }

        input[type="text"] {
            font-size: 0.7rem !important;
            padding: 12px 12px;
            height: 35px;
        }

        .home-search-location {
            font-size: 12px;
            padding: 0 12px;
        }

        .home-search-btn {
            font-size: 15px;
            padding: 0 20px;
        }

        /* dòng note dưới cùng nhỏ lại */
        .home-hero-footer {
            font-size: 10px;
        }
    }

    /* màn rất nhỏ ≤ 480px: co thêm chút nữa */
    @@media (max-width: 480px) {
        .home-main-title {
            font-size: 17px;
            line-height: 1.25;
            width: 90%;
            margin: auto;
            margin-top: 7%;
            text-align: center;
        }


        .home-sub-title {
            font-size: 11px;
            padding: 1%;
            text-align: center;
        }

        .home-tabs {
            font-size: 12px;
            gap: 8px;
        }

        .home-header-right-top {
            font-size: 12px;
        }

        .home-header-right-bottom {
            font-size: 9px;
        }

        .home-search-box {
            background: #fff;
            border-radius: 0.25rem;
            display: flex;
            align-items: stretch;
            overflow: hidden;
            width: 75%;
            box-shadow: 0 1.2rem 2rem rgba(0, 0, 0, 0.25);
            box-sizing: border-box;
            margin:auto
        }


        .home-search-btn {
            font-size: 12px;
            padding: 0 20px;
            width: 65px;
            text-align: center;
        }
    }
</style>


<div class="home-hero">
    <!-- KHUNG 1: bao toàn bộ nội dung giữa -->
    <div class="home-hero-shell">

        <!-- KHUNG 2: HEADER -->
        <div class="home-hero-header">
            <!-- KHỐI TRÁI: logo + city + tagline -->
            <div class="home-header-left-box">
                <div class="home-logo-icon"></div>
                <div class="home-header-left">
                    <div class="home-header-left-top">
                        <span>NhàNow</span>
                        @*<span class="home-location">
                            <svg viewBox="0 0 24 24"
                                 width="16" height="16"
                                 fill="currentColor"
                                 class="home-location-icon">
                                <path d="M12 2.5C8.96 2.5 6.5 4.96 6.5 8c0 3.74 3.39 7.47 4.96 9.15.29.31.77.31 1.06 0C14.11 15.47 17.5 11.74 17.5 8c0-3.04-2.46-5.5-5.5-5.5zm0 6.5A2 2 0 1 1 12 5a2 2 0 0 1 0 4z" />
                            </svg>@HomeTexts.CityName
                        </span>*@
                    </div>
                    <div class="home-header-left-tagline">
                        @*@HomeTexts.LogoTagline*@
                        <svg viewBox="0 0 24 24"
                             width="16" height="16"
                             fill="currentColor"
                             class="home-location-icon">
                            <path d="M12 2.5C8.96 2.5 6.5 4.96 6.5 8c0 3.74 3.39 7.47 4.96 9.15.29.31.77.31 1.06 0C14.11 15.47 17.5 11.74 17.5 8c0-3.04-2.46-5.5-5.5-5.5zm0 6.5A2 2 0 1 1 12 5a2 2 0 0 1 0 4z" />
                        </svg>@HomeTexts.CityName
                    </div>
                </div>
            </div>

            <!-- KHỐI PHẢI: Thuê/Bán/Đăng tin (trên) + Login/Language (dưới) -->
            <div class="home-header-right-box">
                <!-- Dòng trên -->
                <div class="home-header-right-top">
                    <a href="#">@HomeTexts.NavRent</a>
                    <span>|</span>
                    <a href="#">@HomeTexts.NavBuy</a>
                    <a href="@Url.Action("Request", "Landlord")" class="nav-post">@HomeTexts.NavPostListing</a>
                </div>

                <!-- Dòng dưới -->
                <div class="home-header-right-bottom">
                    @*<span>👤</span>
                        <a href="#">@HomeTexts.Login</a> /
                        <a href="#">@HomeTexts.Register</a>

                        <span style="margin:0 6px;">|</span>*@

                    <a href="@Url.Action("Set", "Language", new { lang = "vi-VN", returnUrl = Request.RawUrl })"
                       class="@(currentLang.StartsWith("vi") ? "lang-active" : "")">
                        VI
                    </a>
                    |
                    <a href="@Url.Action("Set", "Language", new { lang = "en-US", returnUrl = Request.RawUrl })"
                       class="@(currentLang.StartsWith("en") ? "lang-active" : "")">
                        EN
                    </a>
                    |
                    <a href="@Url.Action("Set", "Language", new { lang = "zh-CN", returnUrl = Request.RawUrl })"
                       class="@(currentLang.StartsWith("zh") ? "lang-active" : "")">
                        中文
                    </a>
                </div>
            </div>
        </div>

        <!-- KHUNG 3: MAIN -->
        <div class="home-hero-main">
            <!-- khung con: title + subtitle -->
            <div class="home-main-text">
                <div class="home-main-title">
                    @HomeTexts.MainTitle
                </div>
                <div class="home-sub-title">
                    @string.Format(HomeTexts.SubTitle, totalListings)
                </div>
            </div>

            <!-- khung con: tabs -->
            @*<div class="home-main-tabs">
                <ul class="home-tabs">
                    <li class="active">@HomeTexts.TabFindRoom</li>
                    <li>@HomeTexts.TabFindApartment</li>
                    <li>@HomeTexts.TabFindArea</li>
                </ul>
            </div>*@

            <!-- khung con: search trắng -->
            <div class="home-main-search">
                @using (Html.BeginForm("Index", "Property", FormMethod.Get, new { @class = "home-search-box" }))
                {
                    <input type="text"
                           name="keyword"
                           placeholder="@HomeTexts.SearchPlaceholder" />

                    @*<div class="home-search-location">
                        <span class="glyphicon glyphicon-map-marker"></span>
                        <span style="margin-left:6px;">@HomeTexts.MapLabel</span>
                    </div>*@

                    <button type="submit" class="home-search-btn">
                        @HomeTexts.SearchButton
                    </button>
                }
            </div>
        </div>

        <!-- KHUNG 4: FOOTER nhỏ dưới cùng -->
        @*<div class="home-hero-footer">
            @HomeTexts.BottomNote
        </div>*@
    </div>
</div>
